{
    "compilerOptions": {
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
    
        "sourceMap": true,
        "outDir": "./.tmp/build/",
        "moduleResolution": "node",
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        
        "lib": [
            "es2015",
            "dom", "es2016","es2019","es2022"
        ],
        "baseUrl": ".","paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "jsx": "react",
        "types": ["react", "react-dom"]
    },
    "files": [
        "./src/visual.ts"
    ],
    "include": [
    "src/**/*",    
    "src/utils/**/*"  
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts" 
  ]
}